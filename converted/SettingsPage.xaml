<UserControl x:Class="SmartKeyboard.Styles.SettingsPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    
    <UserControl.Resources>
        
        <Style x:Key="SliderValueStyle" TargetType="Border">
            <Setter Property="Width" Value="35"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#996496FA"/>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#E64A78B4" Offset="0"/>
                        <GradientStop Color="#CC3664A0" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        <Style x:Key="SliderLabelStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#c0cfe0"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        
        <Style x:Key="SectionCardStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,10,12,10"/>
            <Setter Property="BorderBrush">
                <Setter.Value>
                    <SolidColorBrush Color="#6496FA" Opacity="0.25"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#B423283C" Offset="0"/>
                        <GradientStop Color="#A0191E32" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>
        
        
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="15,0,15,10">
            
            
            <Border x:Name="HeaderFrame" 
                    Height="50" 
                    CornerRadius="10" 
                    BorderThickness="1"
                    Margin="0,10,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#C8282D41" Offset="0"/>
                        <GradientStop Color="#B41E2337" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#6496FA" Opacity="0.2"/>
                </Border.BorderBrush>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="الإعدادات" 
                               FontFamily="Segoe UI" 
                               FontSize="18" 
                               FontWeight="Bold">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#a0d8ff" Offset="0"/>
                                <GradientStop Color="#ff9a3c" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <Image x:Name="SettingsIcon" Width="24" Height="24" Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
            
            
            <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,15">
                <StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,11">
                        <TextBlock Text="الشفافية" Foreground="#4a90e2" Style="{StaticResource SectionTitleStyle}"/>
                        <Image x:Name="TransparencyIcon" Width="24" Height="24" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    
                    <Grid Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource SliderValueStyle}">
                            <TextBlock x:Name="BgOpacityValue" Text="200" 
                                       Foreground="#d2e2f7" FontFamily="Segoe UI" FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Slider x:Name="BgOpacitySlider" Grid.Column="2" 
                                Minimum="2" Maximum="255" Value="200"
                                IsDirectionReversed="True" Height="22"
                                SmallChange="1" LargeChange="1"
                                ValueChanged="Slider_ValueChanged"/>
                        <TextBlock Grid.Column="4" Text="شفافية الخلفية" Style="{StaticResource SliderLabelStyle}"/>
                    </Grid>
                    
                    
                    <Grid Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource SliderValueStyle}">
                            <TextBlock x:Name="TextOpacityValue" Text="255" 
                                       Foreground="#d2e2f7" FontFamily="Segoe UI" FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Slider x:Name="TextOpacitySlider" Grid.Column="2" 
                                Minimum="50" Maximum="255" Value="255"
                                IsDirectionReversed="True" Height="22"
                                SmallChange="1" LargeChange="1"
                                ValueChanged="Slider_ValueChanged"/>
                        <TextBlock Grid.Column="4" Text="شفافية النص" Style="{StaticResource SliderLabelStyle}"/>
                    </Grid>
                    
                    
                    <Grid Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource SliderValueStyle}">
                            <TextBlock x:Name="SettingsOpacityValue" Text="230" 
                                       Foreground="#d2e2f7" FontFamily="Segoe UI" FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Slider x:Name="SettingsOpacitySlider" Grid.Column="2" 
                                Minimum="100" Maximum="255" Value="230"
                                IsDirectionReversed="True" Height="22"
                                SmallChange="1" LargeChange="1"
                                ValueChanged="Slider_ValueChanged"/>
                        <TextBlock Grid.Column="4" Text="شفافية الإعدادات" Style="{StaticResource SliderLabelStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            
            <Border Style="{StaticResource SectionCardStyle}" Margin="0,0,0,15">
                <StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,11">
                        <TextBlock Text="النص" Foreground="#9b59b6" Style="{StaticResource SectionTitleStyle}"/>
                        <Image x:Name="TextIcon" Width="24" Height="24" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    
                    <Grid Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource SliderValueStyle}">
                            <TextBlock x:Name="FontSizeValue" Text="20" 
                                       Foreground="#d2e2f7" FontFamily="Segoe UI" FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Slider x:Name="FontSizeSlider" Grid.Column="2" 
                                Minimum="14" Maximum="40" Value="20"
                                IsDirectionReversed="True" Height="22"
                                SmallChange="1" LargeChange="1"
                                ValueChanged="Slider_ValueChanged"/>
                        <TextBlock Grid.Column="4" Text="حجم الخط" Style="{StaticResource SliderLabelStyle}"/>
                    </Grid>
                    
                    
                    <Grid Margin="0,4,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="35"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Style="{StaticResource SliderValueStyle}">
                            <TextBlock x:Name="LineEndValue" Text="0" 
                                       Foreground="#d2e2f7" FontFamily="Segoe UI" FontSize="14"
                                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <Slider x:Name="LineEndSlider" Grid.Column="2" 
                                Minimum="0" Maximum="300" Value="0"
                                IsDirectionReversed="True" Height="22"
                                SmallChange="1" LargeChange="1"
                                ValueChanged="Slider_ValueChanged"/>
                        <TextBlock Grid.Column="4" Text="نهاية السطر الأول" Style="{StaticResource SliderLabelStyle}"/>
                    </Grid>
                </StackPanel>
            </Border>
            
            
            <Border Style="{StaticResource SectionCardStyle}">
                <StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,11">
                        <TextBlock Text="الألوان" Foreground="#e67e22" Style="{StaticResource SectionTitleStyle}"/>
                        <Image x:Name="ColorIcon" Width="24" Height="24" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        
                        <Button x:Name="BgColorButton"
                                Grid.Column="0"
                                Content="لون الخلفية"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                MinHeight="25"
                                Padding="8,16,8,16"
                                Cursor="Hand"
                                Click="BgColorButton_Click"/>
                        
                        
                        <Button x:Name="TextColorButton"
                                Grid.Column="2"
                                Content="لون النص"
                                FontFamily="Segoe UI"
                                FontSize="18"
                                MinHeight="25"
                                Padding="8,16,8,16"
                                Cursor="Hand"
                                Click="TextColorButton_Click"/>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
