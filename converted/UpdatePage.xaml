<Window x:Class="SmartKeyboard.Styles.UpdatePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Update Available"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Width="420"
        SizeToContent="Height"
        
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Loaded="Window_Loaded">
    
    
    <Border x:Name="UpdateContainer"
            Margin="8"
            CornerRadius="15"
            BorderThickness="1"
            BorderBrush="#4a90e2"
            Padding="25">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop x:Name="ContainerBgTop" Color="#FF1E2436" Offset="0"/>
                <GradientStop x:Name="ContainerBgBottom" Color="#FF141A2C" Offset="1"/>
            </LinearGradientBrush>
        </Border.Background>
        
        <StackPanel>
            
            
            <Image x:Name="LogoImage"
                   Width="90" Height="90"
                   MinHeight="100"
                   HorizontalAlignment="Center"/>
            
            
            <TextBlock x:Name="TitleLabel"
                       Text="يتوفر إصدار جديد"
                       Foreground="#A0D8FF"
                       FontFamily="Segoe UI"
                       FontSize="26"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,0"/>
            
            
            <Border x:Name="ChangelogContainer"
                    Visibility="Collapsed"
                    MinHeight="150"
                    CornerRadius="12"
                    BorderThickness="1"
                    Padding="15,15,5,15"
                    Margin="0,15,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#C832384A" Offset="0"/>
                        <GradientStop Color="#C8282E40" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#6496FA" Opacity="0.2"/>
                </Border.BorderBrush>
                
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <TextBlock x:Name="ChangelogText"
                               Foreground="#8090a8"
                               FontFamily="Segoe UI"
                               FontSize="18"
                               TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>
            
            
            <Border x:Name="VersionContainer"
                    CornerRadius="12"
                    BorderThickness="1"
                    Padding="20,15,20,15"
                    Margin="0,15,0,0">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#B4282E40" Offset="0"/>
                        <GradientStop Color="#B41E2436" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#6496FA" Opacity="0.25"/>
                </Border.BorderBrush>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                    
                    <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                        <TextBlock Text="الإصدار الجديد" 
                                   Foreground="#8090a8"
                                   FontFamily="Segoe UI"
                                   FontSize="18"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="NewVersionValue"
                                   Text="v2.0"
                                   Foreground="#58D58D"
                                   FontFamily="Segoe UI"
                                   FontSize="22"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                    
                    
                    <Button x:Name="ToggleButton"
                            Grid.Column="1"
                            Width="40" Height="40"
                            Cursor="Hand"
                            Click="ToggleButton_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="ToggleBorder"
                                                    Background="Transparent"
                                                    CornerRadius="20">
                                                <Image x:Name="ToggleIcon" Width="30" Height="30"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="ToggleBorder" Property="Background" Value="#336496C8"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                    
                    
                    <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                        <TextBlock Text="الإصدار الحالي" 
                                   Foreground="#8090a8"
                                   FontFamily="Segoe UI"
                                   FontSize="18"
                                   HorizontalAlignment="Center"/>
                        <TextBlock x:Name="CurrentVersionValue"
                                   Text="v1.9"
                                   Foreground="#ff9a3c"
                                   FontFamily="Segoe UI"
                                   FontSize="22"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Border>
            
            
            <StackPanel x:Name="ProgressContainer" Visibility="Collapsed" Margin="0,15,0,0">
                <ProgressBar x:Name="ProgressBar"
                             Height="25"
                             Minimum="0" Maximum="100" Value="0"/>
                <TextBlock x:Name="ProgressLabel"
                           Text="جاري التحميل..."
                           Foreground="#8090a8"
                           FontFamily="Segoe UI"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"/>
            </StackPanel>
            
            
            <Grid x:Name="ButtonsContainer" Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                
                <Button x:Name="LaterButton"
                        Grid.Column="0"
                        Content="التحديث لاحقاً"
                        MinHeight="48"
                        FontFamily="Segoe UI"
                        FontSize="18"
                        Cursor="Hand"
                        Click="LaterButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="LaterBorder"
                                                CornerRadius="14"
                                                BorderThickness="2"
                                                BorderBrush="#FFC80000"
                                                Padding="10,20,10,20">
                                            <Border.Background>
                                                <SolidColorBrush Color="#C80000" Opacity="0.5"/>
                                            </Border.Background>
                                            <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="#FFDBDB"
                                                       FontFamily="{TemplateBinding FontFamily}"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="LaterBorder" Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#C80000" Opacity="0.7"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
                
                
                <Button x:Name="UpdateButton"
                        Grid.Column="2"
                        Content="التحديث الآن"
                        MinHeight="48"
                        FontFamily="Segoe UI"
                        FontSize="18"
                        Cursor="Hand"
                        Click="UpdateButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="UpdateBorder"
                                                CornerRadius="14"
                                                BorderThickness="2"
                                                BorderBrush="#FF02F76A"
                                                Padding="10,20,10,20">
                                            <Border.Background>
                                                <SolidColorBrush Color="#02F76A" Opacity="0.5"/>
                                            </Border.Background>
                                            <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="#E8FFF0"
                                                       FontFamily="{TemplateBinding FontFamily}"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="UpdateBorder" Property="Background">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#02F76A" Opacity="0.7"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
            
            
            <StackPanel x:Name="CompleteContainer" Visibility="Collapsed" Margin="0,15,0,0">
                <TextBlock x:Name="CompleteLabel"
                           Text="تم التحديث بنجاح!"
                           Foreground="#58D58D"
                           FontFamily="Segoe UI"
                           FontSize="18"
                           HorizontalAlignment="Center"/>
                
                <Button x:Name="RestartButton"
                        Content="إعادة التشغيل"
                        MinHeight="48"
                        FontFamily="Segoe UI"
                        FontSize="18"
                        Cursor="Hand"
                        Margin="0,15,0,0"
                        Click="RestartButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="RestartBorder"
                                                CornerRadius="14"
                                                BorderThickness="2"
                                                BorderBrush="#CC3498DB"
                                                Padding="10,20,10,20">
                                            <Border.Background>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#B33498DB" Offset="0"/>
                                                    <GradientStop Color="#B32980B9" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.Background>
                                            <TextBlock Text="{TemplateBinding Content}"
                                                       Foreground="#E8F4FF"
                                                       FontFamily="{TemplateBinding FontFamily}"
                                                       FontSize="{TemplateBinding FontSize}"
                                                       HorizontalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="RestartBorder" Property="Background">
                                                    <Setter.Value>
                                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                            <GradientStop Color="#E63498DB" Offset="0"/>
                                                            <GradientStop Color="#E62980B9" Offset="1"/>
                                                        </LinearGradientBrush>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
