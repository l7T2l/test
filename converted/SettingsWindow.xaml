<Window x:Class="SmartKeyboard.Styles.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        
        Title="Smart Keyboard Settings"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        ShowActivated="False"
        Width="500"
        Height="500"
        
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        MouseMove="Window_MouseMove"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        KeyDown="Window_KeyDown"
        Loaded="Window_Loaded">
    
    
    <Grid Margin="8">
        <Grid.ColumnDefinitions>
            
            <ColumnDefinition Width="*"/>
            
            <ColumnDefinition Width="105"/>
        </Grid.ColumnDefinitions>
        
        
        <Border Grid.Column="0"
                x:Name="ContentFrame"
                CornerRadius="15,0,0,15"
                BorderThickness="1,1,0,1"
                BorderBrush="#4a90e2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop x:Name="ContentBgTop" Color="#FF1E2436" Offset="0"/>
                    <GradientStop x:Name="ContentBgBottom" Color="#FF141A2C" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            
            <Grid>
                
                <Frame x:Name="ContentFrame_Page"
                       NavigationUIVisibility="Hidden"
                       Margin="0"/>
            </Grid>
        </Border>
        
        
        <Border Grid.Column="1"
                x:Name="Sidebar"
                CornerRadius="0,15,15,0"
                BorderThickness="0,1,1,1"
                BorderBrush="#4a90e2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop x:Name="SidebarBgTop" Color="#FF161D33" Offset="0"/>
                    <GradientStop x:Name="SidebarBgBottom" Color="#FF0B1028" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                
                <Image x:Name="LogoImage"
                       Grid.Row="0"
                       Width="60" Height="60"
                       Margin="0,20,0,0"
                       HorizontalAlignment="Center"/>
                
                
                <StackPanel Grid.Row="2" Margin="0,0,0,0">
                    
                    
                    <Button x:Name="BtnControl"
                            Content="التحكم"
                            Tag="0"
                            Click="NavButton_Click"
                            Style="{DynamicResource NavButtonStyle}"/>
                    
                    
                    <Button x:Name="BtnSettings"
                            Content="الإعدادات"
                            Tag="1"
                            Click="NavButton_Click"
                            Margin="0,12,0,0"
                            Style="{DynamicResource NavButtonStyle}"/>
                    
                    
                    <Button x:Name="BtnDetect"
                            Content="تحديد"
                            Tag="2"
                            Click="NavButton_Click"
                            Margin="0,12,0,0"
                            Style="{DynamicResource NavButtonStyle}"/>
                    
                    
                    <Button x:Name="BtnAbout"
                            Content="حول"
                            Tag="3"
                            Click="NavButton_Click"
                            Margin="0,12,0,0"
                            Style="{DynamicResource NavButtonStyle}"/>
                </StackPanel>
                
                
                <TextBlock x:Name="VersionLabel"
                           Grid.Row="4"
                           Text="v1.9"
                           Foreground="#ff9a3c"
                           FontFamily="Segoe UI"
                           FontSize="12"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>
            </Grid>
        </Border>
        
        
        <Button x:Name="CloseButton"
                Grid.Column="0"
                Content="❌"
                Width="32" Height="32"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="30,20,0,0"
                Cursor="Hand"
                Click="CloseButton_Click">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="CloseBorder"
                                        Background="#FF3C4155"
                                        CornerRadius="18"
                                        BorderThickness="1"
                                        BorderBrush="#4DFF6464">
                                    <TextBlock Text="{TemplateBinding Content}"
                                               Foreground="#ff8080"
                                               FontSize="15"
                                               FontWeight="Bold"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="CloseBorder" Property="Background">
                                            <Setter.Value>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                                    <GradientStop Color="#FFFF5050" Offset="0"/>
                                                    <GradientStop Color="#FFDC3232" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="CloseBorder" Property="BorderBrush" Value="#ff5050"/>
                                        <Setter TargetName="CloseBorder" Property="BorderThickness" Value="2"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="CloseBorder" Property="Background" Value="#FFB42828"/>
                                        <Setter TargetName="CloseBorder" Property="BorderBrush" Value="#ff3030"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
    </Grid>
    
    
    <Window.Resources>
        
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#A0D8FF"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="NavBorder"
                                Background="{TemplateBinding Background}"
                                BorderThickness="0,0,0,0"
                                Padding="5,10,5,10">
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       FontWeight="{TemplateBinding FontWeight}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#5A95BF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Foreground" Value="#48B4FF"/>
                            </Trigger>
                            <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="active">
                                <Setter Property="Foreground" Value="#48B4FF"/>
                                <Setter TargetName="NavBorder" Property="BorderThickness" Value="0,0,3,0"/>
                                <Setter TargetName="NavBorder" Property="BorderBrush" Value="#ff9a3c"/>
                                <Setter TargetName="NavBorder" Property="Background">
                                    <Setter.Value>
                                        <LinearGradientBrush StartPoint="1,0" EndPoint="0,0">
                                            <GradientStop Color="#664A90E2" Offset="0"/>
                                            <GradientStop Color="#004A90E2" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Setter.Value>
                                </Setter>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
</Window>
