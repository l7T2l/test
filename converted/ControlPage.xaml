<UserControl x:Class="SmartKeyboard.Styles.ControlPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">
    
    
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Margin="15,0,15,10">
            
            
            <Border x:Name="HeaderFrame" 
                    Height="50" 
                    CornerRadius="10" 
                    BorderThickness="1"
                    Margin="0,10,0,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#C8282D41" Offset="0"/>
                        <GradientStop Color="#B41E2337" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#6496FA" Opacity="0.2"/>
                </Border.BorderBrush>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="التحكم" 
                               FontFamily="Segoe UI" 
                               FontSize="18" 
                               FontWeight="Bold"
                               VerticalAlignment="Center">
                        <TextBlock.Foreground>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                <GradientStop Color="#a0d8ff" Offset="0"/>
                                <GradientStop Color="#ff9a3c" Offset="1"/>
                            </LinearGradientBrush>
                        </TextBlock.Foreground>
                    </TextBlock>
                    <Image x:Name="HeaderIcon" Width="24" Height="24" Margin="8,0,0,0"/>
                </StackPanel>
            </Border>
            
            
            <Border x:Name="LocationSectionCard"
                    CornerRadius="10"
                    BorderThickness="1"
                    Padding="18,15,18,15"
                    Margin="0,0,0,18">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#B423283C" Offset="0"/>
                        <GradientStop Color="#A0191E32" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#6496FA" Opacity="0.25"/>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.31" ShadowDepth="3"/>
                </Border.Effect>
                
                <StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="موقع الكتابة" 
                                   Foreground="#58D58D" 
                                   FontFamily="Segoe UI" 
                                   FontSize="13" 
                                   FontWeight="Bold"/>
                        <Image x:Name="MouseSiteIcon" Width="24" Height="24" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    
                    <Border x:Name="LocationLabelBorder"
                            CornerRadius="10"
                            BorderThickness="2"
                            Padding="15"
                            MinHeight="60"
                            Margin="0,0,0,12">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#804A8C50" Offset="0"/>
                                <GradientStop Color="#993C6E41" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Border.BorderBrush>
                            <SolidColorBrush Color="#6AC878" Opacity="0.5"/>
                        </Border.BorderBrush>
                        <TextBlock x:Name="LocationLabel"
                                   Text="❌ غير محدد موقع الكتابة"
                                   Foreground="#b8e6c3"
                                   FontFamily="Segoe UI"
                                   FontSize="18"
                                   TextAlignment="Center"
                                   HorizontalAlignment="Center"/>
                    </Border>
                    
                    
                    <Button x:Name="ResetLocationButton"
                            Content="إعادة تعيين موقع الكتابة"
                            FontFamily="Segoe UI"
                            FontSize="23"
                            FontWeight="Normal"
                            Foreground="#FFDBDB"
                            Cursor="Hand"
                            Padding="10,16,10,16"
                            Margin="0,0,0,12"
                            Click="ResetLocationButton_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="ButtonBorder"
                                        CornerRadius="14"
                                        BorderThickness="2"
                                        Padding="{TemplateBinding Padding}">
                                    <Border.Background>
                                        <SolidColorBrush x:Name="ButtonBg" Color="#80C80000"/>
                                    </Border.Background>
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="#C80000"/>
                                    </Border.BorderBrush>
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="ButtonBorder" Property="Background">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#8002F76A"/>
                                            </Setter.Value>
                                        </Setter>
                                        <Setter TargetName="ButtonBorder" Property="BorderBrush">
                                            <Setter.Value>
                                                <SolidColorBrush Color="#02F76A"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    
                    
                    <TextBlock x:Name="LocationHintLabel"
                               Text="حدد موقع الكتابة في الفأرة وضغط مرتين على insert"
                               Foreground="#8090a8"
                               FontFamily="Segoe UI"
                               FontSize="15"
                               TextAlignment="Center"/>
                </StackPanel>
            </Border>
            
            
            <Border x:Name="SendMethodSectionCard"
                    CornerRadius="10"
                    BorderThickness="1"
                    Padding="18,15,18,15">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#B423283C" Offset="0"/>
                        <GradientStop Color="#A0191E32" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <SolidColorBrush Color="#6496FA" Opacity="0.25"/>
                </Border.BorderBrush>
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" Color="Black" Opacity="0.31" ShadowDepth="3"/>
                </Border.Effect>
                
                <StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="طريقة الإرسال" 
                                   Foreground="#ff9a3c" 
                                   FontFamily="Segoe UI" 
                                   FontSize="13" 
                                   FontWeight="Bold"/>
                        <Image x:Name="KeyboardIcon" Width="24" Height="24" Margin="5,0,0,0"/>
                    </StackPanel>
                    
                    
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        
                        <Button x:Name="EnterModeButton"
                                Grid.Column="0"
                                Content="Enter "
                                FontFamily="Segoe UI"
                                FontSize="20"
                                FontWeight="Normal"
                                Foreground="#ffffff"
                                Cursor="Hand"
                                Height="48"
                                Click="EnterModeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="EnterBorder"
                                            CornerRadius="10"
                                            BorderThickness="2"
                                            BorderBrush="#60a0e0"
                                            Background="#D93478DC">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image x:Name="EnterIcon" Width="24" Height="24" Margin="0,0,5,0"/>
                                            <ContentPresenter/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        
                        <Button x:Name="MouseModeButton"
                                Grid.Column="2"
                                Content="Mouse "
                                FontFamily="Segoe UI"
                                FontSize="20"
                                FontWeight="Normal"
                                Foreground="#d0e8ff"
                                Cursor="Hand"
                                Height="48"
                                Click="MouseModeButton_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border x:Name="MouseBorder"
                                            CornerRadius="10"
                                            BorderThickness="2"
                                            BorderBrush="#5090c0"
                                            Background="#593478DC">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Image x:Name="MouseIcon" Width="24" Height="24" Margin="0,0,5,0"/>
                                            <ContentPresenter/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </Grid>
                    
                    
                    <TextBlock x:Name="SendModeHintLabel"
                               Text="إرسال النص عن طريق الـ Enter"
                               Foreground="#8090a8"
                               FontFamily="Segoe UI"
                               FontSize="15"
                               TextAlignment="Center"
                               TextWrapping="Wrap"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
