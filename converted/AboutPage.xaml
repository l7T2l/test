<UserControl x:Class="SmartKeyboard.Styles.AboutPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="Transparent">
    
    
    <Grid Margin="30,10,30,30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            
            
            <Image x:Name="LogoImage"
                   Width="100" Height="100"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,15"/>
            
            
            <TextBlock x:Name="AppName"
                       Text="Smart Keyboard"
                       Foreground="#A0D8FF"
                       FontFamily="Segoe UI"
                       FontSize="23"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>
            
            
            <TextBlock x:Name="AppNameAr"
                       Text="لوحة المفاتيح الذكية"
                       Foreground="#C0D0E8"
                       FontFamily="Segoe UI"
                       FontSize="18"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,3"/>
            
            
            <TextBlock x:Name="AppDesc"
                       Text="للألعاب والبرامج غير الداعمة للغة العربية"
                       Foreground="#6a7a8f"
                       FontFamily="Segoe UI"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,18"/>
            
            
            <Rectangle Width="170" Height="4" 
                       RadiusX="2" RadiusY="2"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,18">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="#FF8C24" Offset="0.5"/>
                        <GradientStop Color="Transparent" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            
            
            <TextBlock x:Name="DevName"
                       Text="Developed by Reem (7T2)"
                       Foreground="#C0D0E8"
                       FontFamily="Segoe UI"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,3"/>
            
            
            <TextBlock x:Name="DevNameAr"
                       TextAlignment="Center"
                       Foreground="#8090a8"
                       FontFamily="Segoe UI"
                       FontSize="15"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,18">
                <Run Text="تم التطوير بواسطة ريــReemــم (7T2)"/><LineBreak/>
                <Run Text="البرنامج "/><Run Text="مجاني" Foreground="#58D58D"/><Run Text=" لخدمة جميع العرب"/><LineBreak/>
                <Run Text="أرجو منكم الدعاء لي بالخير هو أفضل دعم"/>
            </TextBlock>
            
            
            <TextBlock x:Name="VerLbl"
                       Text="v1.9"
                       Foreground="#ff9a3c"
                       FontFamily="Segoe UI"
                       FontSize="20"
                       FontWeight="Normal"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,55"/>
            
            
            <TextBlock x:Name="CopyLbl"
                       Text="حقوق النشر Copyright © 2026"
                       Foreground="#8090a8"
                       FontFamily="Segoe UI"
                       FontSize="13"
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</UserControl>
